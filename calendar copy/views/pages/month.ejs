		$('.month-day').on('click', function(){
			var id = $(this).data('id');
			$('#myModal').find('.modal-title').text(id) ;
		})

		$('#myModal').on('show.bs.modal', function(event){
			var modal = $(this);
			var id = $('#myModal').find('.modal-title').text();
			//modal.find('.modal-title').text('New message to xxxxxx')
			modal.find('.modal-body button').data('button-id', id) ;
		})

		var addMonthContent = function(obj){
			var buttonId = $(obj).data('button-id') ;
			var content = $(obj).parent().prev().val();
			$('#' + buttonId).next().append("<li>" + content + "</li>") ;
		}
	</script>

